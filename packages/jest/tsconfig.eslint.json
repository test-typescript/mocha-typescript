{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "lib": [
        "es5", "es6"
      ],
      "outDir": "dist"
  },
  "compileOnSave": false,
  "include": [
      "index.ts",
      "test.ts"
  ],
  "exclude": [
      "dist", "node_modules"
  ]
}
